@page "/"
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation

<PageTitle>Home - BalzorApp</PageTitle>

<AuthorizeView>
    <Authorized>
        @{
            Navigation.NavigateTo("/dashboard");
        }
    </Authorized>
    <NotAuthorized>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h1 class="display-4 mb-4">Welcome to BalzorApp</h1>
                    <p class="lead mb-5">A modern Blazor Server application with authentication and user management</p>
                    
                    <div class="row mb-5">
                        <div class="col-md-4 text-center mb-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <span class="oi oi-shield display-4 text-primary mb-3"></span>
                                    <h5>Secure Authentication</h5>
                                    <p class="text-muted">Built-in user authentication and authorization</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-center mb-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <span class="oi oi-people display-4 text-success mb-3"></span>
                                    <h5>User Management</h5>
                                    <p class="text-muted">Comprehensive user administration system</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-center mb-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <span class="oi oi-dashboard display-4 text-warning mb-3"></span>
                                    <h5>Analytics Dashboard</h5>
                                    <p class="text-muted">Real-time statistics and insights</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-5">
                            <h4 class="mb-4">Get Started</h4>
                            <p class="text-muted mb-4">Sign in to access the full application features and dashboard.</p>
                            <a href="/login" class="btn btn-primary btn-lg">
                                <span class="oi oi-account-login me-2"></span>Sign In
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>
