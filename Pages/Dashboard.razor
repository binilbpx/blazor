@page "/dashboard"
@using Microsoft.AspNetCore.Components.Authorization
@using BalzorApp.Services
@inject IUserService UserService

<PageTitle>Dashboard - BalzorApp</PageTitle>

<AuthorizeView Roles="Admin" Context="authContext">
    <Authorized>
        <div class="container-fluid">
            <div class="row mb-4">
                <div class="col">
                    <h1 class="h3 mb-0 text-dark">
                        <span class="oi oi-dashboard me-2"></span>Dashboard
                    </h1>
                    <p class="text-muted">Welcome back, @authContext.User.Identity?.Name!</p>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total Users
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@totalUsers</div>
                                </div>
                                <div class="col-auto">
                                    <span class="oi oi-people fa-2x text-gray-300" style="font-size: 2rem; color: #4e73df;"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Normal Users
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@normalUsers</div>
                                </div>
                                <div class="col-auto">
                                    <span class="oi oi-person fa-2x text-gray-300" style="font-size: 2rem; color: #1cc88a;"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Admin Users
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@adminUsers</div>
                                </div>
                                <div class="col-auto">
                                    <span class="oi oi-shield fa-2x text-gray-300" style="font-size: 2rem; color: #f6c23e;"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary">User Statistics</h6>
                            <button class="btn btn-sm btn-outline-primary" @onclick="RefreshStats">
                                <span class="oi oi-reload me-1"></span>Refresh
                            </button>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 text-center">
                                    <div class="progress-circle" style="width: 120px; height: 120px; margin: 0 auto;">
                                        <div class="d-flex align-items-center justify-content-center h-100">
                                            <div class="text-center">
                                                <div class="h4 mb-0 text-primary">@totalUsers</div>
                                                <small class="text-muted">Total</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 text-center">
                                    <div class="progress-circle" style="width: 120px; height: 120px; margin: 0 auto;">
                                        <div class="d-flex align-items-center justify-content-center h-100">
                                            <div class="text-center">
                                                <div class="h4 mb-0 text-success">@normalUsers</div>
                                                <small class="text-muted">Normal</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 text-center">
                                    <div class="progress-circle" style="width: 120px; height: 120px; margin: 0 auto;">
                                        <div class="d-flex align-items-center justify-content-center h-100">
                                            <div class="text-center">
                                                <div class="h4 mb-0 text-warning">@adminUsers</div>
                                                <small class="text-muted">Admin</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-warning" role="alert">
            <span class="oi oi-warning me-2"></span>
            You need admin privileges to access the dashboard.
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private int totalUsers = 0;
    private int normalUsers = 0;
    private int adminUsers = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserStats();
    }

    private async Task LoadUserStats()
    {
        var users = await UserService.GetAllUsersAsync();
        totalUsers = users.Count();
        normalUsers = users.Count(u => u.Role == "User");
        adminUsers = users.Count(u => u.Role == "Admin");
    }

    private async Task RefreshStats()
    {
        await LoadUserStats();
    }
} 