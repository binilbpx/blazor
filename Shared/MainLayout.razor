@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using BalzorApp.Services

<PageTitle>BalzorApp</PageTitle>

<div class="d-flex">
    <div class="d-flex flex-column flex-shrink-0 p-3 bg-dark text-white" style="width: 220px; min-height: 100vh;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <span class="fs-4">BalzorApp</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <AuthorizeView>
                <NotAuthorized>
                    <li class="nav-item">
                        <NavLink class="nav-link text-white" href="" Match="NavLinkMatch.All">
                            <span class="oi oi-home me-2"></span> Home
                        </NavLink>
                    </li>
                </NotAuthorized>
                <Authorized>
                    <li>
                        <NavLink class="nav-link text-white" href="dashboard">
                            <span class="oi oi-dashboard me-2"></span> Dashboard
                        </NavLink>
                    </li>
                    <li>
                        <NavLink class="nav-link text-white" href="exchange-rates">
                            <span class="oi oi-globe me-2"></span> Exchange Rates
                        </NavLink>
                    </li>
                    <li>
                        <NavLink class="nav-link text-white" href="github-analytics">
                            <span class="oi oi-git me-2"></span> GitHub Analytics
                        </NavLink>
                    </li>
                    <li>
                        <NavLink class="nav-link text-white" href="code-quality-analytics">
                            <span class="oi oi-graph me-2"></span> Code Quality Analytics
                        </NavLink>
                    </li>
                    <li>
                        <NavLink class="nav-link text-white" href="manage-users">
                            <span class="oi oi-people me-2"></span> Manage Users
                        </NavLink>
                    </li>
                </Authorized>
            </AuthorizeView>
        </ul>
    </div>

    <main class="flex-grow-1">
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized Context="authContext">
                    <div class="dropdown">
                        <button class="btn btn-light dropdown-toggle d-flex align-items-center" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="oi oi-person me-2"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li class="dropdown-item-text text-muted">
                                <span class="oi oi-person me-2"></span>@authContext.User.Identity?.Name
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li><button class="dropdown-item" @onclick="Logout"><span class="oi oi-account-logout me-2"></span>Logout</button></li>
                        </ul>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <a href="login" class="btn btn-primary">Login</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <CascadingAuthenticationState>
            <article class="content px-4">
                @Body
            </article>
        </CascadingAuthenticationState>
    </main>
</div>

@code {
    [Inject] private AuthenticationStateProvider AuthStateProvider { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private void Logout()
    {
        if (AuthStateProvider is BalzorApp.Services.CustomAuthenticationStateProvider customProvider)
        {
            customProvider.Logout();
        }
        Navigation.NavigateTo("/");
    }
}
